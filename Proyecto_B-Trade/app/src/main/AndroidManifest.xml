<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.udea.compumovil.gr08_2017.proyecto_b_trade">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Dark">
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SingUp" />
        <activity
            android:name=".Activities.MenuPrincipal"
            android:label="@string/title_activity_nd"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.DetalleLibroActivity" />
        <activity android:name=".Activities.MiLibroActivity" />
        <activity android:name=".Activities.AgregarLibroActivity" />

        <service android:name=".Services.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".Activities.LibreriaInteresado" />
        <activity android:name=".Activities.ChatActivity" />
        <activity android:name=".Activities.EditarLibroActivity"></activity>
    </application>

</manifest>