<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.edu.udea.compumovil.gr08_20171.Lab4.fragments.FragmentPerfil">

    <ImageView
        android:id="@+id/perfil_photo_usuario"
        android:layout_marginTop="0dp"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:background="@drawable/ic_face_black_24px"/>

    <TextView
        android:id="@+id/perfil_nombre_usuario"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Nombre de usuario"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/perfil_username"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="username"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/perfil_email"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Correo electrÃ³nico"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/perfil_edad_usuario"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Edad de usuario"
        android:textSize="25sp"
        android:textColor="#000000"/>

</LinearLayout>